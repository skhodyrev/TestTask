[bastion]
${bastion-name} ansible_host=${bastion-ip}  # ${bastion-id}

[bastion:vars]
ansible_user=${username}
ansible_ssh_private_key_file=bastion.pem
ansible_host_key_checking=false



[nginx]
%{ for index, name in nginx-name ~}
${name} ansible_host=${nginx-ip[index]} # ${nginx-id[index]}
%{ endfor ~}

[nginx:vars]
ansible_user=${username}
ansible_ssh_common_args='-o ProxyCommand="ssh -W %h:%p -q ${username}@${bastion-ip} -i bastion.pem -o StrictHostKeyChecking=no"'
ansible_ssh_private_key_file=nginx.pem
ansible_host_key_checking=false